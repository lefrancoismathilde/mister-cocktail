<div class="container text-center">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-offset-md-6">
      <h2>Carte des cocktails</h2>
      <%= link_to "Create new", new_cocktail_path, class: "btn btn-primary" %>

      <% @cocktails.each do |cocktail| %>
        <h4><strong><%= cocktail.name %></strong></h4>
        <%= link_to "More info", cocktail_path(cocktail) %>
        <%= link_to "Delete", cocktail_path(cocktail), method: :delete %>
      <% end %>

    </div>
  </div>
</div>
